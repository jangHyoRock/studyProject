<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		showHeader="false"
		class="sapUiContentPadding"
		placement="{mData>place}">
		<List items="{mData>category}">
			<items>
				<StandardListItem title="{mData>menuName}"
								type="Active"
								press="handlePopoverPress" />
			</items>
		</List>
	</Popover>
</core:FragmentDefinition>
